<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout

        android:id="@+id/activity_registrazione"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.progettoids.iotforemergency.RegistrazioneActivity">


        <TextView
            android:text="Registrazione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            tools:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="inserire i dati richiesti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            tools:textSize="20sp"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Nome*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:id="@+id/txtName"
            tools:textSize="20sp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/editNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editCognome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editNome"
            android:layout_below="@+id/txtCognome"
            android:ems="10"
            android:hint="Cognome"
            android:inputType="textPersonName" />

        <TextView
            android:text="Codice fiscale*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:id="@+id/txtCodFis"
            tools:textSize="20sp"
            android:layout_below="@+id/editCognome"
            android:layout_centerHorizontal="true" />


        <EditText
            android:id="@+id/editCF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editCognome"
            android:layout_below="@+id/txtCodFis"
            android:ems="10"
            android:hint="Codice fiscale"
            android:inputType="textPersonName" />

        <TextView
            android:text="Username*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:id="@+id/txtUsername"
            android:layout_below="@+id/editCF"
            tools:textSize="20sp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editCF"
            android:layout_below="@+id/txtUsername"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

        <TextView
            android:text="Password*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:id="@+id/txtPass1"
            tools:textSize="20sp"
            android:layout_below="@+id/editUsername"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editUsername"
            android:layout_below="@+id/txtPass1"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <TextView
            android:text="Ripetere Password*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:id="@+id/txtPass2"
            tools:textSize="20sp"
            android:layout_below="@+id/editPassword"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/editPassword2"
            android:hint="Ripetere Password"
            android:ems="10"
            android:layout_below="@+id/txtPass2"
            android:layout_alignStart="@+id/editUsername" />

        <Button
            android:text="Registrati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonReg"
            android:textColor="@android:color/background_light"
            android:backgroundTint="#db524c"
            tools:textSize="18sp"
            android:layout_below="@+id/editPassword2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />

        <TextView
            android:text="Cognome*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:id="@+id/txtCognome"
            tools:textSize="20sp"
            android:layout_below="@+id/editNome"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>